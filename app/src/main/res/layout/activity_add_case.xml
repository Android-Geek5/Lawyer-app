<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:scrollbars="none">
<LinearLayout  android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:id="@+id/ll_navi"

        android:background="@color/colorPrimary"
        android:gravity="center_vertical"

        >
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.3"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/imageView_back"

            >
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_back"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Case"
                android:textSize="15sp"
                android:gravity="center|center_vertical"
                android:textColor="@android:color/white"
                android:id="@+id/toolbar_title" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:id="@+id/imageView_back2"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:layout_weight="0.8"
            android:hint="Previous Date"
            android:textColorHint="@color/colorAccent"
            android:id="@+id/tw_previous_date"

            />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_day"
                android:layout_weight="1"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_month"
                android:layout_weight="1"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_year"
                android:layout_weight="1"/>
        </LinearLayout>



        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:hint="Court Name"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/colorAccent"
            android:id="@+id/textView_name"
            />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@android:color/white"

        android:hint="RFA Number/Case Number"

        android:textColorHint="@color/colorAccent"
        android:id="@+id/textView_number"
      
        />


    


    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@android:color/white"

        android:hint="Case Title"

        android:textColorHint="@color/colorAccent"
        android:id="@+id/textView_title"
        android:layout_marginTop="10dp"
      
        />


    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@android:color/white"
               android:hint="Case Type"

        android:textColorHint="@color/colorAccent"
        android:layout_marginTop="10dp"
      
        android:id="@+id/textView_type"
        />


    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:hint="Status Of Case"
        android:textColorHint="@color/colorAccent"
        android:id="@+id/textView_position"
        android:layout_marginTop="10dp"
      
        />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:layout_weight="0.8"
                android:hint="Next Date"
                android:layout_gravity="center_vertical"
                android:textColorHint="@color/colorAccent"
                android:id="@+id/tw_next_date"

                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_nday"
                android:layout_weight="1"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_nmonth"
                android:layout_weight="1"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_nyear"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:layout_weight="1"
        android:hint="Retain For"
        android:textColorHint="@color/colorAccent"
        android:id="@+id/textView_retain"
        android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              
                android:layout_weight="1"
                android:orientation="vertical">
                <AutoCompleteTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"

                    android:layout_marginTop="10dp"
                    android:hint="Name"
                    android:textColorHint="@color/colorAccent"
                    android:id="@+id/textView_nm"
                    />

                <AutoCompleteTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"

                    android:layout_marginTop="10dp"
                    android:hint="Mobile Number"
                    android:textColorHint="@color/colorAccent"
                    android:id="@+id/textView_mobile"
                    />

            </LinearLayout>
            </LinearLayout>
      
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@android:color/white"
       android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:hint="Opposite Counsellor"
        android:textColorHint="@color/colorAccent"
        android:id="@+id/textView_opposite"
        />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:orientation="vertical">
                <AutoCompleteTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"

                    android:layout_marginTop="10dp"
                    android:hint="Name"
                    android:textColorHint="@color/colorAccent"
                    android:id="@+id/textView_cname"
                    />

                <AutoCompleteTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"

                    android:layout_marginTop="10dp"
                    android:hint="Mobile Number(optional)"
                    android:textColorHint="@color/colorAccent"
                    android:id="@+id/textView_cmobile"
                    />

            </LinearLayout>
        </LinearLayout>

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@android:color/white"

        android:hint="Comments(optional)"
        android:textColorHint="@color/colorAccent"
        android:id="@+id/textView_comments"
        android:layout_marginTop="10dp"
      
        />


    <Button
        android:id="@+id/email_sign_in_button"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/buttonbg"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:text="Add Case"
        android:textStyle="bold" />
        </LinearLayout>
</LinearLayout>
</ScrollView>