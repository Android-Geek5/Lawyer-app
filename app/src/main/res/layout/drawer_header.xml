<LinearLayout
    android:id="@+id/left_drawer"
    android:layout_width="@dimen/drawer_header_width"
    android:layout_height="@dimen/drawer_header_height"
    android:layout_gravity="start"
    android:weightSum="1"
    android:clickable="true"
    android:orientation="vertical"
    android:background="@color/drawer_header_color"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_header_height"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/drawer_header_top_margin">
            <com.eweblog.common.CircularImageView
                android:id="@+id/profile_img"
                android:layout_width="@dimen/drawer_header_image_width_height"
                android:layout_height="@dimen/drawer_header_image_width_height"
                android:padding="1dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/margin_small"
                android:src="@drawable/pic" />


        </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Param123"
                    android:textColor="@android:color/white"
                    android:id="@+id/txt_usrName"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:textSize="@dimen/drawer_username_text" />
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="paramjeet.kaur@erginus.com"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:textColor="@android:color/white"
                    android:id="@+id/txt_userEmail"
                    android:textSize="@dimen/drawer_email_text" />
            </LinearLayout>

    </LinearLayout>
</LinearLayout>