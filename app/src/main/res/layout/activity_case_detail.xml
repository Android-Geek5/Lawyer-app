<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout  android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.erginus.lawyerapp.CaseDetailActivity"
        android:background="@color/colorAccent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:id="@+id/ll_navi"

            android:background="@color/colorPrimary"
            android:gravity="center_vertical"

            >
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="0.3"
                android:gravity="center_vertical|center_horizontal"
                android:id="@+id/imageView_back"

                >
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_back"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Case Detail"
                    android:textSize="20sp"
                    android:gravity="center|center_vertical"
                    android:textColor="@android:color/white"
                    android:id="@+id/toolbar_title" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:id="@+id/imageView_back2"
                />

        </LinearLayout>
                  <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                        android:layout_margin="16dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="Case Number"
            android:gravity="center_vertical"
            android:id="@+id/textView_number"
            android:layout_marginBottom="3dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="Court Name"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:id="@+id/textView_name"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="Case Title"
            android:gravity="center_vertical"
            android:id="@+id/textView_title"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="CaseType"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:id="@+id/textView_type"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="Position/Status Of Case"
            android:id="@+id/textView_position"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="Next Due Date"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="3dp"
            android:id="@+id/textView_duedate"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="Retain For"
            android:id="@+id/textView_retain"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="Opposite Counsellor"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:id="@+id/textView_opposite"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="Comments"
            android:gravity="center_vertical"
            android:id="@+id/textView_comments"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

</LinearLayout>
    </LinearLayout>
</ScrollView>