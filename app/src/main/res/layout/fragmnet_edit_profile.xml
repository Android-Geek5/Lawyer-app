<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:elevation="4dp"
   >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/activity_vertical_margin"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_profilePic"
            >
            <com.eweblog.common.CircularImageView
                android:id="@+id/imageView_profile"
                android:layout_width="@dimen/profile_image_width_height"
                android:layout_height="@dimen/profile_image_width_height"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/pic" />

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/login_form_data_top_margin"
                android:focusable="true"
                android:focusableInTouchMode="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/login_form_data_height"
                    android:padding="@dimen/login_images_padding"
                    android:background="@color/colorIcon"
                    android:src="@drawable/person"/>

                <EditText
                    android:id="@+id/fname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_form_data_height"
                    android:hint="First Name"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textSize="@dimen/login_form_data_text"
                    android:maxLength="10"
                    android:textColor="@android:color/white"
                    android:background="@color/colorText"
                    android:textColorHint="@android:color/darker_gray"
                    android:paddingLeft="@dimen/login_images_padding"
                    />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/login_form_data_top_margin"
                android:focusable="true"
                android:focusableInTouchMode="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/login_form_data_height"
                    android:padding="@dimen/login_images_padding"
                    android:background="@color/colorIcon"
                    android:src="@drawable/person"/>

                <EditText
                    android:id="@+id/lname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_form_data_height"
                    android:hint="Last Name"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/login_form_data_text"
                    android:textColor="@android:color/white"
                    android:background="@color/colorText"
                    android:textColorHint="@android:color/darker_gray"
                    android:paddingLeft="@dimen/login_images_padding"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/login_form_data_top_margin"
                android:focusable="true"
                android:focusableInTouchMode="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/login_form_data_height"
                    android:padding="@dimen/login_images_padding"
                    android:background="@color/colorIcon"
                    android:src="@drawable/mail"/>
                   <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_form_data_height"
                    android:hint="Email"
                    android:layout_weight="1"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textSize="@dimen/login_form_data_text"
                    android:textColor="@android:color/white"
                    android:background="@color/colorText"
                    android:textColorHint="@android:color/darker_gray"
                    android:paddingLeft="10dp"

                    />

              </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/login_form_data_top_margin"
                android:focusable="true"
                android:focusableInTouchMode="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/login_form_data_height"
                    android:padding="@dimen/login_images_padding"
                    android:background="@color/colorIcon"
                    android:src="@drawable/call"/>
                <EditText
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_form_data_height"
                    android:hint="Mobile"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textSize="@dimen/login_form_data_text"
                    android:maxLength="10"
                    android:textColor="@android:color/white"
                    android:background="@color/colorText"
                    android:textColorHint="@android:color/darker_gray"
                    android:paddingLeft="@dimen/login_images_padding"
                    />

               </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/login_form_data_top_margin"
                android:focusable="true"
                android:focusableInTouchMode="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/login_form_data_height"
                    android:padding="@dimen/login_images_padding"
                    android:background="@color/colorIcon"
                    android:src="@drawable/location"/>
                <EditText
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_form_data_height"
                    android:hint="State"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/login_form_data_text"
                    android:textColor="@android:color/white"
                    android:background="@color/colorText"
                    android:textColorHint="@android:color/darker_gray"
                    android:paddingLeft="@dimen/login_images_padding"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/login_form_data_top_margin"
                android:focusable="true"
                android:focusableInTouchMode="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/login_form_data_height"
                    android:padding="@dimen/login_images_padding"
                    android:background="@color/colorIcon"
                    android:src="@drawable/location"/>
                <EditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_form_data_height"
                    android:hint="City"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/login_form_data_text"
                    android:textColor="@android:color/white"
                    android:background="@color/colorText"
                    android:textColorHint="@android:color/darker_gray"
                    android:paddingLeft="@dimen/login_images_padding"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/email_sign_in_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_form_data_top_margin_large"
                android:layout_marginBottom="@dimen/login_form_data_top_margin"
                android:background="@color/buttonbg"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size"
                android:text="SUBMIT"
                android:textAllCaps="false"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>