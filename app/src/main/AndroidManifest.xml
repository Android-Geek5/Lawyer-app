<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.erginus.lawyerapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".RegisterationActivity" />
        <activity
            android:name=".OTPScreenActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".SelectDateActivity" />
        <activity
            android:name=".AddCaseActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".CaseDetailActivity" />
        <activity android:name=".ExitActivity" />
        <activity android:name=".ForgotPasswordActivity"></activity>
    </application>

</manifest>